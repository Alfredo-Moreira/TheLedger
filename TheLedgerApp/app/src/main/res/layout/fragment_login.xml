<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/login_header"
        layout="@layout/view_login_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/login_container"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/login_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/ten_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_username_text" />

        <EditText
            android:id="@+id/username_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_password_text" />

        <EditText
            android:id="@+id/password_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="@string/login_remember_me_text"
                android:textSize="@dimen/text_sixteen" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/remember_me_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/ten_padding" />
        </FrameLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifteen_padding"
            android:elevation="@dimen/five_padding"
            android:minHeight="@dimen/button_height"
            android:padding="@dimen/ten_padding"
            android:text="@string/login_sign_in_text" />

        <TextView
            android:id="@+id/forgot_password_text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ten_padding"
            android:clickable="true"
            android:text="@string/login_forgot_username_password_text" />
    </LinearLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/create_account_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:minHeight="@dimen/button_height"
        android:text="@string/login_create_account_text"
        android:textSize="@dimen/text_thirteen" />

</RelativeLayout>