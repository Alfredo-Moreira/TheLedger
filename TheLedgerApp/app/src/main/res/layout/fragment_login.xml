<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_root"
    android:background="@color/white">

    <include
        android:id="@+id/login_header"
        layout="@layout/view_login_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_header_height"
        android:layout_alignParentTop="true"
       />

    <ScrollView
        android:layout_below="@+id/login_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/login_container_scroll_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:gravity="top">


        <TextView
            fontPath="@string/regular_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:layout_marginEnd="@dimen/ten_padding"
            android:layout_marginStart="@dimen/ten_padding"
            android:layout_marginTop="@dimen/ten_padding"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_twelve_caption" />

        <EditText
            android:id="@+id/username_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ten_padding"
            android:layout_marginStart="@dimen/ten_padding"
            android:inputType="text"
            android:textColor="@color/input_text_color"
            android:textSize="@dimen/text_regular_fourteen" />

        <TextView
            fontPath="@string/regular_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:layout_marginEnd="@dimen/ten_padding"
            android:layout_marginStart="@dimen/ten_padding"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_twelve_caption" />

        <EditText
            android:id="@+id/password_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ten_padding"
            android:layout_marginStart="@dimen/ten_padding"
            android:inputType="textPassword"
            android:textColor="@color/input_text_color"
            android:textSize="@dimen/text_regular_fourteen" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ten_padding"
            android:layout_marginStart="@dimen/ten_padding">

            <TextView
                fontPath="@string/regular_font"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="@string/remember_me"
                android:textSize="@dimen/text_regular_fourteen" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/remember_me_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/ten_padding" />
        </FrameLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/sign_in_button"
            fontPath="@string/medium_font"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/fifteen_padding"
            android:background="@drawable/button_selector"
            android:minHeight="@dimen/button_height"
            android:text="@string/sign_in"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/ten_padding"
            android:layout_marginStart="@dimen/ten_padding"
            android:textSize="@dimen/text_buttons_fourteen" />

        <TextView
            android:id="@+id/forgot_password_text_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fifty_padding"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/ten_padding"
            android:layout_marginBottom="@dimen/ten_padding"
            android:clickable="true"
            fontPath="@string/regular_font"
            android:text="@string/forgot_username_password"
            android:textSize="@dimen/text_regular_fourteen" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="false" />


        <RelativeLayout
            android:id="@+id/create_account_view_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_selector"
            android:clickable="true">

            <TextView
                android:id="@+id/create_account_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/create_account"
                android:textColor="@color/white"
                fontPath="@string/medium_font"
                android:textAllCaps="true"
                android:textSize="@dimen/text_regular_fourteen" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/ten_padding"
                android:layout_toEndOf="@+id/create_account_text"
                android:src="@drawable/ic_account_circle_white_24dp" />
        </RelativeLayout>
    </LinearLayout>


    </ScrollView>




</RelativeLayout>