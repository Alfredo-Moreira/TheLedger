<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/fragment_root"
    android:layout_margin="@dimen/ten_padding" android:paddingTop="@dimen/twenty_five_padding">

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/secondary_root"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include
            android:id="@+id/no_network_screen"
            layout="@layout/view_no_network" />

        <include
            android:id="@+id/no_data_server_error_screen"
            layout="@layout/view_no_data_server_error" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Title"
        android:textColor="@color/text_caption"
        android:textSize="@dimen/text_caption"
        fontPath="@string/regular_font"/>

    <TextView
        android:id="@+id/account_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_body"
        android:textColor="@color/text_color"
        fontPath="@string/regular_font"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Username"
        android:textColor="@color/text_caption"
        android:textSize="@dimen/text_caption"
        fontPath="@string/regular_font"/>

    <TextView
        android:id="@+id/account_username_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_body"
        android:textColor="@color/text_color"
        fontPath="@string/regular_font"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Password"
        android:textColor="@color/text_caption"
        android:textSize="@dimen/text_caption"
        fontPath="@string/regular_font"/>

    <TextView
        android:id="@+id/account_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_body"
        android:textColor="@color/text_color"
        fontPath="@string/regular_font"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Type"
        android:textColor="@color/text_caption"
        android:textSize="@dimen/text_caption"
        fontPath="@string/regular_font"/>

    <TextView
        android:id="@+id/account_type_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_body"
        android:textColor="@color/text_color"
        fontPath="@string/regular_font"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Description"
        android:textColor="@color/text_caption"
        android:textSize="@dimen/text_caption"
        fontPath="@string/regular_font"/>

    <TextView
        android:id="@+id/account_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_body"
        android:textColor="@color/text_color"
        fontPath="@string/regular_font"/>
</LinearLayout>
</FrameLayout>