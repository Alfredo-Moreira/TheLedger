<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/fragment_root"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/secondary_root"
        android:visibility="gone">

        <include
            android:id="@+id/no_network_screen"
            layout="@layout/view_no_network" />

        <include
            android:id="@+id/no_data_server_error_screen"
            layout="@layout/view_no_data_server_error" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/create_account_button"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ten_padding"
            android:layout_marginTop="@dimen/twenty_five_padding"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                fontPath="@string/regular_font"
                android:textColor="@color/text_caption"
                android:textSize="@dimen/text_caption" />

            <EditText
                android:labelFor="@string/first_name"
                android:id="@+id/first_name_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                fontPath="@string/regular_font"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                fontPath="@string/regular_font"
                android:textColor="@color/text_caption"
                android:textSize="@dimen/text_caption" />

            <EditText
                android:labelFor="@string/last_name"
                android:id="@+id/last_name_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                fontPath="@string/regular_font"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/username"
                fontPath="@string/regular_font"
                android:textColor="@color/text_caption"
                android:textSize="@dimen/text_caption" />

            <EditText
                android:inputType="textPersonName"
                android:id="@+id/username_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:labelFor="@string/username"
                fontPath="@string/regular_font"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password"
                fontPath="@string/regular_font"
                android:textColor="@color/text_caption"
                android:textSize="@dimen/text_caption" />

            <EditText
                android:labelFor="@string/password"
                android:id="@+id/password_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                fontPath="@string/regular_font"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_body" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/ten_padding"
                    android:gravity="center_vertical"
                    android:text="@string/show_password"
                    android:textColor="@color/text_color"
                    fontPath="@string/regular_font"
                    android:textSize="@dimen/text_subheading" />

                <android.support.v7.widget.SwitchCompat
                    android:labelFor="@string/show_password"
                    android:id="@+id/show_password_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/ten_padding" />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                fontPath="@string/regular_font"
                android:textColor="@color/text_caption"
                android:textSize="@dimen/text_caption" />

            <EditText
                android:labelFor="@string/phone_number"
                android:id="@+id/phone_number_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                fontPath="@string/regular_font"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                fontPath="@string/regular_font"
                android:textColor="@color/text_caption"
                android:textSize="@dimen/text_caption" />

            <EditText
                android:labelFor="@string/email"
                android:id="@+id/email_address_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                fontPath="@string/regular_font"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_body" />

        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/create_account_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_selector"
        android:text="@string/create_account"
        fontPath="@string/medium_font"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="@dimen/text_body" />
</RelativeLayout>

</RelativeLayout>